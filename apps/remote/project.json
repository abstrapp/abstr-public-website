{
  "name": "remote",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "abstr",
  "sourceRoot": "apps/remote/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/remote",
        "index": "",
        "main": "",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/remote/tsconfig.app.json",
        "assets": [],
        "styles": [],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/remote/webpack.config.js"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/remote/webpack.prod.config.js"
          },
          "optimization": {
            "scripts": false
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "post-build": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "commands": [
          "npx shx cp apps/remote/abstr.config.json dist/apps/remote"
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "remote:build",
        "port": 4201,
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "remote:build:development"
        },
        "production": {
          "buildTarget": "remote:build:production"
        }
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/remote/.storybook",
        "browserTarget": "remote:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/remote",
        "configDir": "apps/remote/.storybook",
        "browserTarget": "remote:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c apps/remote/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "remote:build-storybook",
        "staticFilePath": "dist/storybook/remote",
        "spa": true
      },
      "configurations": {
        "ci": {
          "buildTarget": "remote:build-storybook:ci"
        }
      }
    }
  }
}
